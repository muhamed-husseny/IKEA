@model DepartmentDetailsToReturnDto

@{
    ViewData["Title"] = "Department Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />


<div id="antiForgeryTokenHolder">
    @Html.AntiForgeryToken()
</div>

<div class="container py-5">
    <div class="details-gradient-card p-5 rounded shadow">
        <h2 class="mb-4">Department Details</h2>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="fw-bold">Code</label>
                <input class="form-control" value="@Model.Code" readonly />
            </div>
            <div class="col-md-6">
                <label class="fw-bold">Name</label>
                <input class="form-control" value="@Model.Name" readonly />
            </div>
        </div>

        <div class="mb-3">
            <label class="fw-bold">Description</label>
            <input class="form-control" value="@Model.Description" readonly />
        </div>

        <div class="mb-4">
            <label class="fw-bold">Creation Date</label>
            <input class="form-control" value="@Model.CreationDate.ToString("dd/MM/yyyy")" readonly />
        </div>

        <div class="d-flex justify-content-between">
            <a href="javascript:history.back()" class="btn btn-secondary px-4">Back</a>
            <button class="btn btn-danger px-4" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fw-semibold mb-2">Are you sure you want to delete this department?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger px-4" id="confirmDeleteBtn" data-id="@Model.Id">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>


<script>
    document.getElementById("confirmDeleteBtn").addEventListener("click", function () {
        const deptId = this.getAttribute("data-id");

       
        const token = document.querySelector('#antiForgeryTokenHolder input[name="__RequestVerificationToken"]').value;

        fetch(`/Department/Delete/${deptId}`, {
            method: "POST",
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            }
        })
            .then(response => {
                if (response.ok) {
                    
                    window.location.href = '/Department/Index';
                } else {
                    return response.text().then(text => { throw new Error(text); });
                }
            })
            .catch(error => {
                alert("❌ Error: " + error.message);
            });
    });
</script>
