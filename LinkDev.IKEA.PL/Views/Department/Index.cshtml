@model IEnumerable<DepartmentToReturnDto>

@{
    ViewData["Title"] = "Departments";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="card shadow-sm p-4" style="border-radius: 1rem; margin-bottom: 3rem;">
                <h1 class="mb-4">Departments</h1>
                <div class="mb-4">
                    <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create New Department
                    </a>
                </div>
                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-striped table-hover align-middle text-center">
                            <thead class="bg-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(d => d.Code)</th>
                                    <th>@Html.DisplayNameFor(d => d.Name)</th>
                                    <th>@Html.DisplayNameFor(d => d.CreationDate)</th>
                                    <th>Details</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var department in Model)
                                {
                                    <tr>
                                        <td>@department.Code</td>
                                        <td>@department.Name</td>
                                        <td>@department.CreationDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id"
                                               style="background: rgba(33, 150, 243, 0.12); color: #1565c0; border: 1px solid #90caf9; border-radius: 0.7rem; font-weight: 500; padding: 0.45rem 1.2rem; transition: background 0.2s, color 0.2s; display: inline-flex; align-items: center; gap: 0.5rem; text-decoration: none;"
                                               onmouseover="this.style.background='#1976d2'; this.style.color='#fff';"
                                               onmouseout="this.style.background='rgba(33, 150, 243, 0.12)'; this.style.color='#1565c0';">
                                                <i class="fas fa-eye"></i> Details
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id"
                                               style="background: rgba(76, 175, 80, 0.12); color: #388e3c; border: 1px solid #a5d6a7; border-radius: 0.7rem; font-weight: 500; padding: 0.45rem 1.2rem; transition: background 0.2s, color 0.2s; display: inline-flex; align-items: center; gap: 0.5rem; text-decoration: none;"
                                               onmouseover="this.style.background='#43a047'; this.style.color='#fff';"
                                               onmouseout="this.style.background='rgba(76, 175, 80, 0.12)'; this.style.color='#388e3c';">
                                                <i class="fas fa-edit"></i> Update
                                            </a>
                                        </td>
                                        <td>
                                            <button class="btn btn-danger open-delete-modal"
                                                    data-id="@department.Id"
                                                    data-name="@department.Name"
                                                    type="button"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="deleteModalLabel">Delete Department</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <span>Are you sure you want to delete <b id="depName"></b>?</span>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="depId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.querySelectorAll('.open-delete-modal').forEach(btn => {
    btn.addEventListener('click', function() {
        document.getElementById('depId').value = this.getAttribute('data-id');
        document.getElementById('depName').textContent = this.getAttribute('data-name');
    });
});

document.getElementById('deleteForm').addEventListener('submit', function (e) {
    e.preventDefault();
    var form = this;
    var formData = new FormData(form);
    fetch('/Department/Delete', {
        method: 'POST',
        body: formData,
        headers: {
            'RequestVerificationToken': form.querySelector('input[name="__RequestVerificationToken"]').value
        }
    })
    .then(response => {
        if (response.ok) {
            window.location.href = '/Department/Index';
        } else {
            alert('Delete failed.');
        }
    })
    .catch(error => {
        alert('Error: ' + error);
    });
});
</script>
